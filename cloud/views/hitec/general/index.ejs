<%- contentFor('head')%>
<% include ../admin/css %>
<%- contentFor('body')%>
<div class="container">
  <% include ./top-bar %>
  <!-- ** MAIN CONTENT** -->
  <!--main content start-->
      <section id="">
          <section class="wrapper site-min-height">
          	<h3><i class="fa fa-angle-right"></i> Pasar Lista</h3>
              <button type="button" class="btn btn-warning" onclick="window.document.location='/addstudent %>';">Agregar alumno</button>

          	<div class="row mt">
          		<div class="col-lg-12">
          		<% include ./searchbar %>
          		</div>
          	</div>

            <div class="row mt">
                  <div class="col-md-12">
                      <div class="content-panel">
                          <table class="table table-striped table-advance table-hover">
                            <h4><i class="fa fa-angle-right"></i> Alumnos</h4>
                            <hr>
                              <thead>
                              <tr>
                                  <th><i class=""></i> Matricula</th>
                                  <th class=""><i class=""></i> Nombre</th>
                                  <th class=""><i class=""></i> Apellidos</th>
                                  <th><i class="fa fa-bookmark"></i> Equipo</th>
                                  <th><i class=" fa fa-edit"></i> Acci√≥n</th>
                                  <th></th>
                              </tr>
                              </thead>

                              <tbody>

                              <% if(students){ %>         
                                <% if(students.length != 0){ %>         
                                    <% for(var i=0; i<students.length; i++){ %>
                                       <tr>
                                          <td><%= students[i].get("matricula") %></td>
                                          <td><%= students[i].get("name") %></td>
                                          <td><%= students[i].get("lastname") %> <%= students[i].get("lastName") %></td>
                                          <td><%= students[i].get("color") %> <%= students[i].get("teamnumber") %></td>
                                          <td>
                                            <%if(students[i].get("assistance") != true){%>
                                            <button class="btn btn-primary btn-xs" onclick="window.document.location='/selectTeam?student=<%= students[i].id %>';"><i class="fa fa-check"></i></button>
                                            <%}%>
                                          </td>
                                      </tr>
                                    <% } %>
                                <% } %>
                              <% }%>
                             
                              </tbody>
                          </table>
                      </div><!-- /content-panel -->
                  </div><!-- /col-md-12 -->
              </div><!-- /row -->

			
		      </section><! --/wrapper -->
      </section><!-- /MAIN CONTENT -->
</div>

<%- contentFor('scripts')%>
